<header>
<h1>Budget App</h1>
<%= button_to "Logout", destroy_user_session_path, method: :delete, data: {turbo: false}, class: "btn danger"  %>
</header>

<main>
<% if @categories.empty? %>
      <p class="no-categories">No categories available</p>
    <% else %>
        <% @categories.each do |cat| %>
          <div class="category">
            <%= link_to user_transactions_path(current_user.id, cat.id) do %>
              <p class="icon">
               <%= image_tag cat.icon, class:'icon'%>
              </p>
              <div class="category-details">
                <h4 class="categories-name">
                  <%= cat.name.upcase %>
                </h4>
                <p class="category-date-created">
                  <%= cat.created_at.to_date %>
                </p>
              </div>
            <% end %>
          </div>
        <% end %>
    <% end %>
</main>

<footer>
<%= link_to 'Add Category', new_user_category_path(current_user) %>
</footer>